SCRAPEBADGER_API_KEY=your_scrapebadger_api_key
GEMINI_API_KEY=your_gemini_api_key
# xAI (Grok) - used when LLM_MODEL starts with "xai/"
XAI_API_KEY=your_xai_api_key
DATABASE_URL=postgresql+asyncpg://postgres:admin@localhost:5432/solana_narrative
ENVIRONMENT=development
LOG_LEVEL=INFO
# LLM model selection (default in code is Grok)
LLM_MODEL=xai/grok-4-1-fast-non-reasoning

# CoinGecko / market data
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
COINGECKO_API_KEY=your_coingecko_api_key_optional

# Dune Analytics
DUNE_BASE_URL=https://api.dune.com/api/v1
DUNE_API_KEY=your_dune_api_key

# GitHub API
GITHUB_BASE_URL=https://api.github.com
GITHUB_TOKEN=your_github_token_optional

# Scheduler overrides (hours)
COINGECKO_SCRAPE_INTERVAL_HOURS=1
DUNE_SCRAPE_INTERVAL_HOURS=3
GITHUB_SCRAPE_INTERVAL_HOURS=6
